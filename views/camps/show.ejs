<%- include('../partials/header') %>

<h1>
  <%= title %>
</h1>


<section class="camp-details">
  <h2><%= camp.name %></h2>
  <div>Description: 
    <%= camp.description %></div>
  <div>Total Sites: 
    <%= camp.totalSites %></div>
  <div>Location
    <%= camp.location %> </div>
  <div>RV's Permitted:
    <%= camp.rvPermitted ? 'Yes' : 'No' %></div>
</section>

<% if (user?._id.equals(camp.user)) { %>
  <a href="/camps/<%=camp._id%>/edit">EDIT</a>
<form action="/camps/<%=camp._id %>?_method=DELETE" method="POST">
  <button type="submit">DELETE</button>
</form>
<% } %>

<section class="add-notes">  
  <h3>Camp Notes</h3>
  <% if (user) { %>
  <form id="add-review-form" method="POST" action="/camps/<%= camp._id %>/reviews">
    <div id="notes">
      <label>Notes:</label>
      <textarea name="notes"></textarea>
    </div>
    <div id="season">
      <label>Season:</label>
      <textarea name="Season"></textarea>
    </div>
    <div id="noise-level">
      <label>Noise Level:</label>
      <select name="rating">
        <option value="1">1 = shhh</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5 = Party Cirty!</option>
      </select>
    </div>
    <input type="submit" value="Add Review">
  </form>
  <% } %>
</section>

<section class="read-notes">
  <% if (camp.reviews.length) { %>
  <table>
  <thead>
  <tr>
    <th>User</th>
    <th>Season</th>
    <th>Noise Level</th>
    <th>Notes</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% let total = 0 %>
  <% camp.reviews.forEach(function(r) { %>
    <% total += r.rating %>
    <tr>
      <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
      <td><%= r.createdAt.toLocaleDateString() %></td>
      <td><%= r.content %></td>
      <td><%= r.rating %></td>
      <td>
        <% if (user?._id.equals(r.user)) { %>
          <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
            <button type="submit">DELETE</button>
          </form>
          <% } %>
        </td>
      </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / camp.reviews.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
    <% } %>
    
</section>
  
  
  <%- include('../partials/footer') %>
  