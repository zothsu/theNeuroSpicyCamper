<%- include('../partials/header') %>

<h1>
  <%= title %>
</h1>
<section>
  <h2><%= camp.name %></h2>
  <div>Description: 
    <%= camp.description %></div>
  <div>Total Sites: 
    <%= camp.totalSites %></div>
  <div>Location
    <%= camp.location %> </div>
  <div>RV's Permitted:
    <%= camp.rvPermitted ? 'Yes' : 'No' %></div>
</section>

<% if (user?._id.equals(camp.user)) { %>
  <a href="/camps/<%=camp._id%>/edit">EDIT</a>
<form action="/camps/<%=camp._id %>?_method=DELETE" method="POST">
  <button type="submit">DELETE</button>
</form>

<% } %>

<%- include('../partials/footer') %>
