<%- include('../partials/header') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/camps" method="POST">
    <fieldset>
      <legend>Add a Campground</legend>

      <label for="name">Name:</label>
      <input type="text" name="name">
      
      <label for="description">Description:</label>
      <input type="text" name="description">
  
      
      <label for="total-sites">Total Sites:    </label>
        <input type="number" name="totalSites" id="total-sites" required pattern="^([1-9]|[1-9][0-9]{1,2})$">
  
        <label for="camp-location">Location:</label>
        <input type="text" name="location">
  
  
        <legend>RV's allowed in Camp:</legend>
        <div>
          <input type="radio" name="rvPermitted" id="rv-yes" value=true checked>
          <label for="rv-yes">Yes</label>
          
          <input type="radio" name="rvPermitted" id="rv-no" value=false>
          <label for="rv-no">No</label>
        </div>
  
      <br>
      <button type="submit">Submit</button>
    </fieldset>

  </form>
</main>

<%- include('../partials/footer') %>